{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@commerce/shared": [
        "libs/shared/src"
      ],
      "@commerce/shared/*": [
        "libs/shared/src/*"
      ],
      "@commerce/users": [
        "apps/users/src"
      ],
      "@commerce/users/*": [
        "apps/users/src/*"
      ],
      "@commerce/orders": [
        "apps/orders/src"
      ],
      "@commerce/orders/*": [
        "apps/orders/src/*"
      ],
      "@commerce/gateway": [
        "apps/gateway/src"
      ],
      "@commerce/gateway/*": [
        "apps/gateway/src/*"
      ],
      "@commerce/payments": [
        "apps/payments/src"
      ],
      "@commerce/payments/*": [
        "apps/payments/src/*"
      ],
      "@commerce/products": [
        "apps/products/src"
      ],
      "@commerce/products/*": [
        "apps/products/src/*"
      ]
    }
  }
}